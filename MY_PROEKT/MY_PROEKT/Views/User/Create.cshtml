@model MY_PROEKT.Models.RegisterModel

@{ 
    ViewBag.Title = "Create"; 
}

<div class="content">
    <h2>Create</h2>

    @using (Html.BeginForm())
    { 
        @Html.AntiForgeryToken() 
        @Html.ValidationSummary() 

        <fieldset>
            <legend>Форма регистрации</legend>
            <ol>
                <li>
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                </li>
                <li>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                </li>
                <li>
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </li>
                <li>
                    <label for="role">Роль</label>
                    <select id="role" name="role">
                                                 <option>
                                @User.Identity.Name.ToString() 
                            </option> 
                                           </select>
                </li>
                <li>
                    @Html.LabelFor(m => m.E_mail)
                    @Html.TextBoxFor(m => m.E_mail)
                </li>
                    <li>
                    @Html.LabelFor(m => m.WillAttend)
                   @Html.TextBoxFor(m => m.WillAttend)
                </li>
                    <li>
                    @Html.LabelFor(m => m.Data1)
                    @Html.TextBoxFor(m => m.Data1)
                </li>
                                          </ol>
            <input type="submit" value="Создать пользователя" />
        </fieldset> 
    }
    <p>
        @Html.ActionLink("Вернуться к списку пользователей", "Index")
    </p>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}