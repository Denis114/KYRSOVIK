<!DOCTYPE html>
<html lang="ru">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title — приложение ASP.NET MVC</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                
                    <section id="login" class="float-right">
                        @Html.Partial("_LoginPartial")
                    </section>
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("СТРАХОВАЯ КОМПАНИЯ", "Index", "Home")</p>
                    <p class="site-title"></p>
                </div>
                <div class="float-right"><img src="~/images/imushestvo1.png" height="150" width="960" />
                    
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("УСЛУГИ", "Index", "Home")</li>
                            <li>@Html.ActionLink("ДОГОВОРА", "Index", "Dogovor")</li>
                            <li>@Html.ActionLink("ЗАЯВКИ", "Index", "Zayvka")</li>
                            <li>@Html.ActionLink("ПОЛЬЗОВАТЕЛИ", "Index", "User")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year —Механиков Денис, ИСТ-114</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
